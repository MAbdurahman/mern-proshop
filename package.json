{
	"name": "mern-proshop",
	"version": "1.0.0",
	"description": "MERN stack ecommerce website",
	"main": "server.js",
	"type": "module",
	"scripts": {
		"start": "node backend/server.js",
		"server": "SET NODE_ENV=DEVELOPMENT& nodemon backend/server",
		"client": "npm start --prefix frontend",
		"dev": "concurrently \"npm run server\" \"npm run client\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/MAbdurahman/mern-proshop.git"
	},
	"keywords": [
		"MongoDB",
		"ExpressJS",
		"ReactJS",
		"NodeJS"
	],
	"author": "Mahdi Abdurrahman",
	"license": "MIT",
	"nodemonConfig": {
		"delay": "2000"
	},
	"bugs": {
		"url": "https://github.com/MAbdurahman/mern-proshop/issues"
	},
	"homepage": "https://github.com/MAbdurahman/mern-proshop#readme",
	"dependencies": {
		"dotenv": "^10.0.0",
		"express": "^4.17.1"
	},
	"devDependencies": {
		"concurrently": "^6.2.0"
	}
}
